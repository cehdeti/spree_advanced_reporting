<% content_for :page_title do %>
  <%= link_to Spree.t(:reports), spree.admin_reports_url %> /
  <%= Spree.t(action_name) %>
  <small><%= Spree.t("#{action_name}_description") %></small>
<% end %>

<% if @report.taxon_text || @report.product_text %>
  <% content_for :sidebar_title do %>
    <% Spree.t(:report_details) %>
  <% end %>

  <% content_for :sidebar do %>
    <nav class="menu">
      <ul class="show_data">
        <%= content_tag :li do %>
          <%= raw @report.taxon_text %>
        <% end %>
        <%= content_tag :li do %>
          <%= raw @report.product_text %>
        <% end %>
      </ul>
    </nav>
  <% end %>
<% end %>

<%= render :partial => 'spree/admin/reports/advanced_report_criteria', :locals => {} %>

<%= raw @report.ruportdata.to_html %>
